<!--suppress HtmlUnknownTarget -->
<html lang="en">

    {{{ components.head }}}

    <body>

    <!-- main content container -->
    <div id="container" class="uk-animation-fade">
        <!-- centered content container -->
        <div class="uk-position-center uk-text-center">
            {{{ components.heading }}}
            <!-- timer element - populated by the script -->
            <h4 id="timer"></h4>
            <h5>
                Click
                <a class="uk-text-danger" href="{{ redirect.location }}">
                    here
                </a>
                if you won't get redirected.
            </h5>
        </div>
    </div>

    {{{ components.footer }}}

    <!-- set global variables -->
    <script type="text/javascript">
        const prop = {
            location: '{{ redirect.location }}',
            debug: Boolean('{{ debug }}')
        }
        // print debug information
        if (prop.debug)
            console.log(JSON.stringify(prop))
    </script>

    {{{ components.scripts }}}

    <!-- main page script -->
    <script src="js/app/redirect.js"></script>

    </body>

</html>