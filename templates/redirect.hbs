<!DOCTYPE html>
<!--suppress HtmlUnknownTarget -->
<html lang="en">

<head>

    <title>
        redirector
    </title>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.png" />

    <link rel="stylesheet" href="css/uikit.min.css">
    <link rel="stylesheet" href="css/style.css" />

</head>

<body>

    <div id="container" class="uk-animation-fade">
        <div class="uk-position-center uk-text-center">
            <a href="https://github.com/seeleft/redirector">
                <img src="images/header.png" alt="redirector" />
            </a>
            <hr />
            <h4 id="timer"></h4>
            <h5>
                Click
                <a class="uk-text-danger" href="{{ redirect.location }}">
                    here
                </a>
                if you won't get redirected.
            </h5>
        </div>
    </div>

    {{{ components.footer }}}

    <!-- set global variables -->
    <script type="text/javascript">
        const prop = {
            location: '{{ redirect.location }}',
            debug: Boolean('{{ debug }}')
        }
        if (prop.debug)
            console.log(`properties: ${JSON.stringify(prop)}`)
    </script>

    <script src="js/jquery-3.4.1.min.js"></script>
    <script src="js/jquery.countdown.min.js"></script>
    <script src="js/uikit.min.js"></script>
    <script src="js/uikit-icons.min.js"></script>
    <script src="js/app/redirect.js"></script>

</body>

</html>